\newcommand{\mynavigationitem}[1]{{%
	\ifthenelse{\equal{\my@navigationitem}{#1}}%
		{\color{ovguaccenttwo}\hyperlink{#1}{\textbf{#1}}\ifnum\thesubsubsection=0\else\ifnavigationincludesubsubsection\ -- \insertsubsubsection{}\fi\fi}%
