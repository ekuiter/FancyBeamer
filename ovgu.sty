\newcommand{\mynavigationitems}{} % override in presentation
\newcommand{\mynavigationdonehypertargets}{} % empty initially
\newcommand{\createhypertargetonce}[1]{%
  % Check if #1 is already in \mynavigationdonehypertargets
  \IfSubStr{\mynavigationdonehypertargets}{#1}{%
    % already done → do nothing
  }{%
    % not done → create target
    \hypertarget{#1}{}%
    % add to done list
    \edef\mynavigationdonehypertargets{\mynavigationdonehypertargets,#1}%
  }%
}
\newcommand{\mynavigation}[1]{%
  \makeatletter
  \def\my@navigationitem{#1}%
  % only create hypertarget once
  \createhypertargetonce{#1}%
  % loop over items if not empty
  \edef\@tmp{\mynavigationitems}%
  \ifx\@tmp\@empty
  \else
    \foreach \item [count=\xi] in \mynavigationitems {%
      \ifnum\xi>1 \mynavigationsep\fi
      \mynavigationitem{\item}%
    }%
  \fi
  \makeatother
}

